#include <stdio.h>
struct complex
{
    int real,imaginary;
};
int main()
{
    struct complex n1,n2,result;
    printf ("Enter 1st complex number with imaginary part: ");
    scanf ("%d %d",&n1.real,&n1.imaginary);
    printf ("Enter 2nd complex number with imaginary part: ");
    scanf ("%d %d",&n2.real,&n2.imaginary);
    result.real=n1.real+n2.real;
    result.imaginary=n1.imaginary+n2.imaginary;
    if (result.imaginary>0)
        printf ("The sum of two complex number is: %d+%di",result.real,result.imaginary);
    else if (result.imaginary<0)
        printf ("The sum of two complex number is: %d%di",result.real,result.imaginary);
    else
        printf ("The sum of two complex number is: %d",result.real);
    return 0;
}
