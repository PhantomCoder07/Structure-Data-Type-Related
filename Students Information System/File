#include <stdio.h>
#include <string.h>
struct stu
{
    char sname[20];
    int sid;
    float cgpa;
};
int main()
{
    int i,j,n;
    printf ("Enter students number: ");
    scanf ("%d",&n);
    struct stu s[n];
    FILE *fp;
    fp = fopen("DATA.txt","w");
    for (i=0; i<n; i++)
    {
        printf ("\nEnter info of student %d    :\n",i+1);
        printf ("Enter student's name       : ");
        scanf ("%s",s[i].sname);
        printf ("Enter student's ID         : ");
        scanf ("%d",&s[i].sid);
        printf ("Enter student's total CGPS : ");
        scanf ("%f",&s[i].cgpa);
        fprintf(fp,"Students information\nStudent %d:\n",i+1);
        fprintf(fp,"Name: %s\nRoll: %d\nCGPA: %.2f\n",s[i].sname,s[i].sid,s[i].cgpa);
    }
    fclose(fp);
    fp = fopen("DATA.txt","r");
    char ch;
    while (!feof(fp))
    {
        ch = getc(fp);
        printf("%c",ch);
    }
    fclose(fp);
    return 0;
}
