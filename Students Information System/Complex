#include <stdio.h>
struct date
{
    int d,m,y;
};
struct address
{
    char city[30];
    char country[30];
};
struct stu
{
    char name[30];
    struct date dob;
    struct address add;
};
int main()
{
    int i,n;
    printf("Enter student numbers: ");
    scanf("%d",&n);
    struct stu s[n];
    for (i=0; i<n; i++)
    {
        printf("\nEnter information of student %d:\n",i+1);
        printf("Enter name: ");
        scanf("%s",s[i].name);
        printf("Enter DOB (dd/mm/yyyy): ");
        scanf("%d %d %d",&s[i].dob.d,&s[i].dob.m,&s[i].dob.y);
        printf("Enter city name: ");
        scanf("%s",s[i].add.city);
        printf("Enter country: ");
        scanf("%s",s[i].add.country);
    }
    printf("\n\n------Information of Students------\n");
    for (i=0; i<n; i++)
    {
        printf("Information of student %d:\n",i+1);
        printf("Name    : %s\n",s[i].name);
        printf("DOB     : %02d/%02d/%d\n",s[i].dob.d,s[i].dob.m,s[i].dob.y);
        printf("City    : %s\n",s[i].add.city);
        printf("Country : %s\n",s[i].add.country);
        printf("\n");
    }
    return 0;
}
