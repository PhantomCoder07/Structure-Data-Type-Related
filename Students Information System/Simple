#include <stdio.h>
#include <string.h>
struct stu
{
    char sfname[20],ssname[20];
    int sid;
    float smarks[10];
};
int main()
{
    int i,j,n;
    printf ("Enter students number: ");
    scanf ("%d",&n);
    struct stu s[n];
    for (i=0; i<n; i++)
    {
        printf ("\nEnter info of student %d :\n",i+1);
        printf ("Enter student's first name : ");
        scanf ("%s",s[i].sfname);
        printf ("Enter student's last name  : ");
        scanf ("%s",s[i].ssname);
        fflush (stdin);
        printf ("Enter student's ID         : ");
        scanf ("%d",&s[i].sid);
        printf ("Enter student's marks in three subject:\n");
        for (j=0; j<3; j++)
        {
            scanf ("%f",&s[i].smarks[j]);
        }
    }
    printf ("\n\n----------Record of students----------\n\n");
    for (i=0; i<n; i++)
    {
        printf ("Student %d     :\n",i+1);
        printf ("Student's name : %s %s\n",s[i].sfname,s[i].ssname);
        printf ("Student's ID   : %d\n",s[i].sid);
        printf ("Student's marks:\n");
        for (j=0; j<3; j++)
        {
            printf ("%.2f\n",s[i].smarks[j]);
        }
        printf ("\n");
    }
    return 0;
}
