#include <stdio.h>
#include <string.h>
struct stu
{
    char sname[20];
    int sid;
    float smarks[5];
    float sum;
};
int main()
{
    int i,j,n;
    printf ("Enter students number: ");
    scanf ("%d",&n);
    struct stu s[n],temp;
    for (i=0; i<n; i++)
    {
        printf ("\nEnter info of student %d :\n",i+1);
        printf ("Enter student's name : ");
        scanf ("%s",s[i].sname);
        fflush (stdin);
        printf ("Enter student's ID   : ");
        scanf ("%d",&s[i].sid);
        printf ("Enter student's marks in five subject:\n");
        for (j=0; j<5; j++)
        {
            scanf ("%f",&s[i].smarks[j]);
            s[i].sum+=s[i].smarks[j];
        }
    }
    printf ("\n\n-----Record of students by total marks-----\n\n");
    for (i=0; i<n-1; i++)
    {
        for (j=i+1; j<n; j++)
        {
            if (s[i].sum< s[j].sum)
            {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }
    for (i=0; i<n; i++)
    {
        printf ("%d Position:\n",i+1);
        printf ("Student's name : %s\n",s[i].sname);
        printf ("Student's ID   : %02d\n",s[i].sid);
        printf ("Student's marks:\n");
        for (j=0; j<5; j++)
        {
            printf ("%.2f\n",s[i].smarks[j]);
        }
        printf ("Student's total mark: %.2f\n",s[i].sum);
        printf ("\n");
    }
    return 0;
}
